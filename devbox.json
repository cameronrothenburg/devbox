{
  "$schema":  "https://raw.githubusercontent.com/jetify-com/devbox/0.12.0/.schema/devbox.schema.json",
  "packages": ["neovim@latest"],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "setupnvim": "git clone https://github.com/cameronrothenburg/nvim.git ~/.config/nvim",
      "updatenvim": "cd ~/.config/nvim && git pull"
    }
  }
}
